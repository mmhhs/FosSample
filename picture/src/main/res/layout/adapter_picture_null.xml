<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/picture_adapter_grid_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/picture_adapter_grid_imageView"/>
        <ImageView
            android:src="@drawable/picture_shoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/picture_transparent"
            android:visibility="visible"
            android:id="@+id/picture_adapter_grid_selector" />

    </RelativeLayout>
</LinearLayout>