<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent"
    android:id="@+id/layout_view_cash_password">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:background="@drawable/popup_round_white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/base_text_black_18"
                android:text="请输入提现密码"
                android:gravity="center"
                android:id="@+id/ft_view_dialog_password_title" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/base_text_grey_deep_14"
                android:text="提现金额"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/ft_view_dialog_password_message" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/base_text_black_18"
                android:textSize="24sp"
                android:text="168.88"
                android:gravity="center"
                android:id="@+id/ft_view_dialog_password_amount" />

            <com.little.popup.gridpasswordview.GridPasswordView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="15dp"
                android:focusable="true"
                app:passwordType="numberPassword"
                android:id="@+id/ft_view_dialog_password_gridPasswordView" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    style="@style/base_text_blue_12"
                    android:text="忘记密码"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/ft_view_dialog_password_forget" />
            </LinearLayout>

            <TextView
                android:id="@+id/ft_view_dialog_password_confirm"
                style="@style/ft_button_orange"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="确认"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:id="@+id/ft_view_dialog_password_cancel">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tx_gb"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
