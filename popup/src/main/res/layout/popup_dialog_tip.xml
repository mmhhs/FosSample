<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_dialog_tip_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:background="@drawable/popup_bg_white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/tip_dialog"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/popup_dialog_tip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:text="@string/popup_tip"
                android:textColor="@color/popup_black"
                android:textSize="18sp"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_layout"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
               >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/a"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="提交后可在"
                    android:textColor="@color/popup_deep_grey"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/b"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="服务评价"
                    android:textColor="@color/popup_black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/c"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:visibility="gone"
                    android:lineSpacingExtra="2dp"
                    android:text="模块查询进展"
                    android:textColor="@color/popup_deep_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/popup_dialog_tip_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text=""
                android:textColor="@color/popup_deep_grey"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/popup_dialog_tip_option_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_dialog_tip_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_view_add_engine_id_shape_white"
                    android:gravity="center"
                    android:text="@string/popup_cancel"
                    android:textColor="#6E6F70"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/popup_dialog_tip_other"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_view_add_engine_id_shape_white"
                    android:gravity="center"
                    android:text="@string/popup_ignore"
                    android:textColor="#6E6F70"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/popup_dialog_tip_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/base_view_add_engine_id_shape_orgine"
                    android:gravity="center"
                    android:text="@string/popup_confirm"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>