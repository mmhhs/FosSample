<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_view_engine"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:gravity="center">

    <LinearLayout
        android:id="@+id/base_view_sign_jiangli_layout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bind_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/base_view_type_integral_update"
                style="@style/base_text_black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="违章查询需要车辆发动机编号\n请补充发动机编号"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                style="@style/base_text_black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="发动机号"

                />

            <EditText
                android:id="@+id/base_view_add_engine_id_edit"
                style="@style/base_text_black_14"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textColorHint="#C3C4C5"
                android:background="@drawable/base_view_add_engine_id_edit"
                android:hint="请输入后六位"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                style="@style/base_text_black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="车牌颜色"
                />

            <RadioGroup
                android:id="@+id/base_view_add_engine_id_radioGroup"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/base_view_add_engine_id_radio_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ft_radio_button"
                    android:button="@null"
                    android:text="蓝色"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:gravity="center_vertical"/>
                <RadioButton
                    android:id="@+id/base_view_add_engine_id_radio_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ft_radio_button"
                    android:button="@null"
                    android:text="黄色"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:gravity="center_vertical"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/base_view_add_engine_id_no_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/base_view_add_engine_id_shape_white"
                android:gravity="center"
                android:text="@string/popup_cancel"
                android:textColor="#6E6F70"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/base_view_add_engine_id_yes_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/base_view_add_engine_id_shape_orgine"
                android:gravity="center"
                android:text="@string/popup_confirm"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
