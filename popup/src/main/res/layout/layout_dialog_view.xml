<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view_sign_jiangli"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/base_view_sign_jiangli_layout"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:background="@drawable/bind_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/base_view_type_integral_update"
                style="@style/base_text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎您成为福田汽车会员！"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/base_text_orange_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="赠送您"

                />

            <TextView
                android:id="@+id/base_view_integral_update"
                style="@style/base_text_orange_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100" />

            <TextView
                style="@style/base_text_orange_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 积分" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/base_text_black_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续" />

            <TextView
                android:id="@+id/base_view_sign_count_day"
                style="@style/base_text_black_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                style="@style/base_text_black_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天签到，明天再坚持！" />
        </LinearLayout>

        <TextView
            android:id="@+id/base_view_sign_sure_button"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt_confirm" />

    </LinearLayout>

</LinearLayout>
